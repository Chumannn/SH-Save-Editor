<Application x:Class="SpaceHaven_Save_Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:views="clr-namespace:SpaceHaven_Save_Editor.Views"
             xmlns:viewModels="clr-namespace:SpaceHaven_Save_Editor.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Indigo" SecondaryColor="Cyan" />
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:CharacterViewModel}">
                <views:Character />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:StorageViewModel}">
                <views:Storage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:AboutViewModel}">
                <views:About />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>